---
import Layout from './BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

interface RelatedPost {
  slug: string;
  title: string;
  description: string;
  image?: { url: string; alt: string };
  categories?: string[];
  pubDate: Date;
}

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  author: string;
  image?: {
    url: string;
    alt: string;
  };
  categories?: string[];
  tags?: string[];
  relatedPosts?: RelatedPost[];
}

const { title, description, pubDate, updatedDate, author, image, categories = [], tags = [], relatedPosts = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout
  title={title}
  description={description}
  ogType="article"
  ogImage={image?.url}
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": title,
      "description": description,
      "author": {
        "@type": "Person",
        "name": author,
        "url": "https://tedsvoiceacademy.com/about"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Ted's Voice Academy",
        "logo": {
          "@type": "ImageObject",
          "url": "https://tedsvoiceacademy.com/images/tva-logo.webp"
        }
      },
      "datePublished": pubDate.toISOString(),
      ...(updatedDate ? { "dateModified": updatedDate.toISOString() } : {}),
      ...(image ? { "image": `https://tedsvoiceacademy.com${image.url}` } : {}),
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": Astro.url.href
      },
      ...(categories.length > 0 ? { "articleSection": categories[0] } : {}),
      ...(tags.length > 0 ? { "keywords": tags.join(", ") } : {})
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://tedsvoiceacademy.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Blog",
          "item": "https://tedsvoiceacademy.com/blog"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": title
        }
      ]
    })} />
  </Fragment>

  <article class="blog-post">
    <!-- Hero -->
    <header class="post-hero">
      <div class="container reveal">
        <Breadcrumb items={[{ label: 'Blog', href: '/blog' }, { label: title }]} schema={false} />
        <a href="/blog" class="back-link">&larr; Back to Blog</a>
        <div class="post-meta">
          {categories.map(cat => (
            <span class="post-category">{cat}</span>
          ))}
          <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        </div>
        <h1>{title}</h1>
        <p class="post-author">By {author}</p>
      </div>
    </header>

    <!-- Hero Image -->
    {image && (
      <div class="post-hero-image">
        <div class="container">
          <img src={image.url} alt={image.alt} width="900" height="500" loading="eager" />
        </div>
      </div>
    )}

    <!-- Content -->
    <div class="post-content">
      <div class="container container-narrow">
        <slot />

        {updatedDate && (
          <p class="post-updated">Last updated: {formattedUpdatedDate}</p>
        )}
      </div>
    </div>

    <!-- Tags -->
    {tags.length > 0 && (
      <div class="post-tags-section">
        <div class="container container-narrow">
          <div class="post-tags">
            {tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="related-section">
        <div class="container">
          <h2 class="related-heading reveal">You might also enjoy</h2>
          <div class="related-grid reveal-stagger">
            {relatedPosts.map((related) => (
              <a href={`/blog/${related.slug}`} class="related-card reveal">
                {related.image && (
                  <img
                    src={related.image.url}
                    alt={related.image.alt}
                    width="400"
                    height="220"
                    loading="lazy"
                    class="related-card__image"
                  />
                )}
                <div class="related-card__body">
                  {related.categories && related.categories.length > 0 && (
                    <span class="related-card__category">{related.categories[0]}</span>
                  )}
                  <h3 class="related-card__title">{related.title}</h3>
                  <p class="related-card__desc">{related.description}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Footer CTA -->
    <footer class="post-footer">
      <div class="container container-narrow">
        <div class="post-cta reveal">
          <h2>Want to go deeper?</h2>
          <p>If something here sparked a question or a goal, I'd love to hear about it.</p>
          <a href="/contact" class="btn btn-primary">Book a Free Discovery Call</a>
        </div>
        <div class="post-nav">
          <a href="/blog" class="back-link">&larr; Back to all posts</a>
        </div>
      </div>
    </footer>
  </article>
</Layout>

<style>
  /* Hero */
  .post-hero {
    background:
      url('/images/noise-texture.png') repeat,
      linear-gradient(135deg, var(--color-navy-deep) 0%, var(--color-navy-medium) 100%);
    background-size: 200px 200px, 100% 100%;
    background-blend-mode: soft-light, normal;
    padding: 4rem 0 3rem;
  }

  .back-link {
    display: inline-block;
    color: var(--color-cream);
    font-size: 0.9375rem;
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-gold-bright);
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .post-category {
    display: inline-block;
    background: rgba(212, 168, 75, 0.15);
    color: var(--color-gold-bright);
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }

  .post-meta time {
    color: var(--color-cream);
    font-size: 0.9375rem;
  }

  .post-hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 4vw + 1rem, 2.75rem);
    font-weight: 700;
    color: var(--color-white);
    line-height: 1.2;
    margin: 0 0 0.75rem;
    max-width: 800px;
  }

  .post-author {
    color: var(--color-cream);
    font-size: 1rem;
    margin: 0;
  }

  /* Hero Image */
  .post-hero-image {
    background: var(--color-off-white);
    padding: 2rem 0 0;
  }

  .post-hero-image .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .post-hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  /* Content */
  .post-content {
    background: var(--color-off-white);
    padding: 2.5rem 0 3rem;
  }

  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Markdown prose styling */
  .post-content :global(h2) {
    font-family: var(--font-heading);
    font-size: clamp(1.375rem, 2.5vw + 0.5rem, 1.75rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 2.5rem 0 1rem;
    line-height: 1.3;
  }

  .post-content :global(h3) {
    font-family: var(--font-heading);
    font-size: clamp(1.125rem, 2vw + 0.25rem, 1.375rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 2rem 0 0.75rem;
    line-height: 1.3;
  }

  .post-content :global(p) {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: 1.25rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1rem 0 1.5rem 1.5rem;
    color: var(--color-charcoal);
  }

  .post-content :global(li) {
    font-size: 1.0625rem;
    line-height: 1.7;
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-gold-bright);
    background: var(--color-cream);
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: var(--color-navy-deep);
  }

  .post-content :global(blockquote p) {
    margin-bottom: 0.5rem;
    color: var(--color-navy-deep);
  }

  .post-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  .post-content :global(strong) {
    font-weight: 600;
    color: var(--color-charcoal);
  }

  .post-content :global(a) {
    color: var(--color-gold-bright);
    text-decoration: underline;
    text-decoration-color: var(--color-gold-bright);
    text-underline-offset: 2px;
  }

  .post-content :global(a:hover) {
    color: var(--color-gold-hover);
  }

  .post-content :global(img) {
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .post-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9375rem;
  }

  .post-content :global(th),
  .post-content :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-gray-light);
    text-align: left;
    line-height: 1.5;
  }

  .post-content :global(th) {
    background: var(--color-navy-deep);
    color: var(--color-white);
    font-weight: 600;
  }

  .post-content :global(tr:nth-child(even)) {
    background: var(--color-cream);
  }

  .post-content :global(hr) {
    border: none;
    border-top: 2px solid var(--color-gray-light);
    margin: 2rem 0;
  }

  .post-updated {
    font-size: 0.875rem;
    color: var(--color-gray-medium);
    margin-top: 2rem;
    font-style: italic;
  }

  /* Tags */
  .post-tags-section {
    background: var(--color-off-white);
    padding: 0 0 2rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-gray-light);
  }

  .tag {
    display: inline-block;
    background: var(--color-cream);
    color: var(--color-charcoal-light);
    font-size: 0.8125rem;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    border: 1px solid var(--color-gray-light);
  }

  /* Related Posts */
  .related-section {
    background: var(--color-cream);
    padding: 3.5rem 0;
  }

  .related-heading {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw + 0.5rem, 2rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    text-align: center;
    margin: 0 0 2rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    display: flex;
    flex-direction: column;
    background: var(--color-white);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .related-card__image {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }

  .related-card__body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .related-card__category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-gold-bright);
    margin-bottom: 0.5rem;
  }

  .related-card__title {
    font-family: var(--font-heading);
    font-size: 1.0625rem;
    font-weight: 700;
    color: var(--color-navy-deep);
    line-height: 1.3;
    margin: 0 0 0.5rem;
  }

  .related-card__desc {
    font-size: 0.875rem;
    color: var(--color-charcoal);
    line-height: 1.5;
    margin: 0;
    flex-grow: 1;
  }

  @media (max-width: 900px) {
    .related-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 560px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Footer CTA */
  .post-footer {
    background: var(--color-white);
    padding: 3rem 0;
  }

  .post-cta {
    text-align: center;
    background: var(--color-off-white);
    padding: 2.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
  }

  .post-cta h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 3vw + 0.5rem, 2rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 0.75rem;
  }

  .post-cta p {
    font-size: 1.0625rem;
    color: var(--color-charcoal);
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    font-family: var(--font-body);
  }

  .btn-primary {
    background: var(--color-gold-bright);
    color: var(--color-navy-deep);
  }

  .btn-primary:hover {
    background: var(--color-gold-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(212, 168, 75, 0.3);
  }

  .post-nav {
    text-align: center;
  }

  .post-nav .back-link {
    color: var(--color-gold-bright);
    font-weight: 500;
  }

  .post-nav .back-link:hover {
    color: var(--color-gold-hover);
    text-decoration: underline;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .post-hero {
      padding: 3rem 0 2rem;
    }

    .post-content {
      padding: 2rem 0;
    }

    .post-cta {
      padding: 2rem 1.5rem;
    }
  }
</style>
