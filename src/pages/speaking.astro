    background: var(--color-off-white);
    padding: 4rem 0;
  }

  .how-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    text-align: center;
    margin: 0 0 2.5rem;
  }

  .how-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .how-item h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-gold-bright);
    margin: 0 0 0.75rem;
  }

  .how-item p {
    color: var(--color-charcoal);
    line-height: 1.7;
    margin: 0;
  }

  /* Expect Section */
  .expect-section {
    background: var(--color-white);
    padding: 4rem 0;
  }

  .expect-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 1.5rem;
  }

  .expect-section > .container-narrow > p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: 1.5rem;
  }

  .scope-note {
    background: var(--color-off-white);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 4px solid var(--color-gold-bright);
    margin: 2rem 0;
  }

  .scope-note h4 {
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 0.75rem;
  }

  .scope-note p {
    color: var(--color-charcoal);
    line-height: 1.7;
    margin: 0;
    font-size: 1rem;
  }

  /* CTA Section */
  .cta-section {
    background:
      url('/images/noise-texture.png') repeat,
      linear-gradient(135deg, var(--color-navy-deep) 0%, var(--color-navy-medium) 100%);
    background-size: 200px 200px, 100% 100%;
    background-blend-mode: soft-light, normal;
    padding: 4rem 0;
    text-align: center;
  }

  .cta-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-white);
    margin: 0 0 1rem;
  }

  .cta-section > .container > p {
    font-size: 1.125rem;
    color: var(--color-cream);
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .cta-secondary {
    margin-top: 1.5rem;
    font-size: 0.9375rem;
    color: var(--color-cream);
  }

  .cta-secondary a {
    color: var(--color-gold-bright);
    text-decoration: none;
  }

  .cta-secondary a:hover {
    text-decoration: underline;
  }

  /* Mobile Adjustments */
  @media (max-width: 768px) {
    .hero {
      padding: 3.5rem 0 3rem;
    }

    .intro-section,
    .who-section,
    .pass-section,
    .how-section,
    .expect-section,
    .cta-section {
      padding: 3rem 0;
    }

    .cards-grid,
    .how-grid {
      grid-template-columns: 1fr;
    }

    .pass-logo {
      max-width: 180px;
    }
  }
</style>
