---
import Layout from '../layouts/BaseLayout.astro';
import SectionDivider from '../components/SectionDivider.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<Layout
  title="Ensemble & Choir Coaching"
  description="Expert coaching for choirs, vocal groups, and ensembles. Achieve unity without losing individual voices. Serving groups throughout the Olympia, WA region."
  ogImage="/images/og/og-ensembles.jpg"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Course",
      "name": "Ensemble & Choir Coaching",
      "description": "Vocal and performance coaching for choirs, quartets, and vocal ensembles. Develop tuning, unity, vowel matching, and authentic performance presence.",
      "url": "https://tedsvoiceacademy.com/ensembles",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Ted's Voice Academy",
        "url": "https://tedsvoiceacademy.com"
      },
      "instructor": {
        "@type": "Person",
        "name": "Ted Chamberlain",
        "url": "https://tedsvoiceacademy.com/about"
      },
      "courseMode": ["Blended"],
      "availableLanguage": "English",
      "audience": {
        "@type": "EducationalAudience",
        "audienceType": "Choirs, quartets, a cappella groups, and vocal ensembles"
      },
      "offers": {
        "@type": "Offer",
        "url": "https://tedsvoiceacademy.com/pricing",
        "priceCurrency": "USD",
        "category": "Ensemble Coaching"
      }
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "Ensemble & Choir Coaching",
      "description": "Expert coaching for church choirs, barbershop quartets and choruses, a cappella groups, school ensembles, community choirs, and competition-focused groups in the Olympia, WA region.",
      "url": "https://tedsvoiceacademy.com/ensembles",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Ted's Voice Academy",
        "url": "https://tedsvoiceacademy.com"
      },
      "serviceType": "Ensemble Vocal Coaching",
      "areaServed": [
        { "@type": "City", "name": "Lacey", "containedInPlace": { "@type": "State", "name": "Washington" } },
        { "@type": "City", "name": "Olympia" },
        { "@type": "City", "name": "Tumwater" }
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Ensemble Coaching Options",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "One-Time Workshop"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Ongoing Ensemble Coaching"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Competition Preparation"
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Sectional Coaching"
            }
          }
        ]
      }
    })} />
  </Fragment>

  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <Breadcrumb items={[{ label: 'Ensemble Coaching' }]} />
      <div class="hero-grid">
        <div class="hero-content">
          <span class="hero-eyebrow">Ensemble Coaching</span>
          <h1>Find your voice together</h1>
          <p class="hero-subtitle">Vocal and performance coaching for groups seeking unity, efficiency, and expressive sound.</p>
          <a href="/contact" class="btn btn-primary">Get in Touch</a>
        </div>
        <div class="hero-image">
          <img src="/images/hero-ensembles.webp" alt="Ted directing a men's chorus on stage" class="hero-photo" />
        </div>
      </div>
    </div>
  </section>

  <SectionDivider variant="wave" topColor="var(--color-navy-deep)" bottomColor="var(--color-white)" />

  <!-- Answer Capsule — structured summary for AI search engines -->
  <section class="capsule-section">
    <div class="container">
      <p class="answer-capsule">Ted's Voice Academy offers ensemble coaching for choirs, barbershop quartets, and a cappella groups in the Pacific Northwest and beyond. Sessions cover tuning, vowel matching, performance presence, and vocal technique. Custom engagements include single sessions, retreat formats, and competition preparation.</p>
      <p class="page-date">Last updated: <time datetime="2026-02-05">February 5, 2026</time></p>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="intro-section">
    <div class="container">
      <div class="intro-grid">
        <div class="intro-content reveal-left">
          <p class="intro-text drop-cap">
            Strong ensemble singing starts with <a href="/singing">strong individual skills</a> — and with a shared understanding of how voices work together. I help choirs/choruses, quartets, and other vocal groups develop tuning, unity, and authentic performance presence.
          </p>
          <p class="intro-text">
            Whether you're preparing for competition, working through a specific challenge, or simply want to connect more deeply as an ensemble, I can help your group find its voice.
          </p>
        </div>
        <div class="intro-image reveal-right">
          <img src="/images/ensemble-chorus-group.webp" alt="Community chorus group photo — ensemble coached by Ted Chamberlain" class="intro-photo" />
        </div>
      </div>
    </div>
  </section>

  <!-- Who I Work With Section -->
  <section class="who-section">
    <div class="container">
      <h2 class="decorated-heading reveal">Groups of all kinds</h2>
      <p class="section-intro reveal">I work with ensembles across traditions and contexts. Here's a sampling of the groups I coach:</p>
      
      <div class="cards-grid reveal-stagger">
        <div class="card reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M9 18V5l12-2v13"/><circle cx="6" cy="18" r="3"/><circle cx="18" cy="16" r="3"/></svg>Church choirs</h3>
          <p>From small worship teams to full sanctuary choirs, I help church musicians develop their sound and lead their congregations with confidence.</p>
        </div>
        
        <div class="card reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>Barbershop quartets and choruses</h3>
          <p>I've spent decades in the barbershop world as a performer, director, and coach. I understand what judges listen for and how to help groups achieve ring, unity, and emotional connection.</p>
        </div>
        
        <div class="card reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 2a3 3 0 0 0-3 3v7a3 3 0 0 0 6 0V5a3 3 0 0 0-3-3Z"/><path d="M19 10v2a7 7 0 0 1-14 0v-2"/><line x1="12" x2="12" y1="19" y2="22"/></svg>A cappella groups</h3>
          <p>Whether you're a college ensemble, community group, or professional vocal band, I can help you tighten your sound and elevate your performances.</p>
        </div>
        
        <div class="card reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>School and youth ensembles</h3>
          <p>I bring nearly 30 years of choral conducting experience in public schools. I know how to meet young singers where they are and help them grow.</p>
        </div>
        
        <div class="card reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>Community choirs</h3>
          <p>Singing together builds connection. I help community groups develop their musicianship while keeping the joy at the center.</p>
        </div>
        
        <div class="card reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="8" r="6"/><path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"/></svg>Competition-focused groups</h3>
          <p>If you're preparing for contest, I can help you refine the details that make the difference — tuning, vowel matching, phrasing, and stage presence.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Ensemble Showcase -->
  <section class="showcase-section">
    <div class="container container-narrow">
      <div class="showcase-image reveal">
        <img src="/images/ensemble-quartet-competition.webp" alt="Barbershop quartet coached by Ted Chamberlain with competition awards" class="showcase-photo" />
        <p class="showcase-caption">A competition quartet with their awards — one of many groups Ted has coached</p>
      </div>
    </div>
  </section>

  <SectionDivider variant="curve" topColor="var(--color-white)" bottomColor="var(--color-navy-deep)" />

  <!-- What I Help With Section -->
  <section class="help-section">
    <div class="container">
      <h2 class="reveal">What we work on</h2>
      <p class="section-intro reveal">Every ensemble has different needs. Here are some of the areas I address:</p>
      
      <div class="help-grid reveal-stagger">
        <div class="help-item reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><line x1="4" x2="4" y1="21" y2="14"/><line x1="4" x2="4" y1="10" y2="3"/><line x1="12" x2="12" y1="21" y2="12"/><line x1="12" x2="12" y1="8" y2="3"/><line x1="20" x2="20" y1="21" y2="16"/><line x1="20" x2="20" y1="12" y2="3"/><line x1="2" x2="6" y1="14" y2="14"/><line x1="10" x2="14" y1="8" y2="8"/><line x1="18" x2="22" y1="16" y2="16"/></svg>Tuning and intonation</h3>
          <p>When voices lock in, the sound transforms. I help groups understand the mechanics of tuning and develop the listening skills that make it happen.</p>
        </div>
        
        <div class="help-item reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>Unity and vowel matching</h3>
          <p>A unified sound isn't about erasing individuality. It's about making intentional choices together. We work on vowel shapes, tone color, and the subtle adjustments that create a cohesive ensemble sound.</p>
        </div>
        
        <div class="help-item reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>Performance presence</h3>
          <p>Great singing deserves great delivery. I help groups connect with their audience, tell the story, and bring genuine emotion to the stage.</p>
        </div>
        
        <div class="help-item reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="m12.83 2.18a2 2 0 0 0-1.66 0L2.6 6.08a1 1 0 0 0 0 1.83l8.58 3.91a2 2 0 0 0 1.66 0l8.58-3.9a1 1 0 0 0 0-1.83Z"/><path d="m22.54 12.43-1.42-.65-8.29 3.78a2 2 0 0 1-1.66 0l-8.29-3.78-1.42.65a1 1 0 0 0 0 1.84l8.58 3.91a2 2 0 0 0 1.66 0l8.58-3.9a1 1 0 0 0 .26-1.85Z"/><path d="m22.54 16.43-1.42-.65-8.29 3.78a2 2 0 0 1-1.66 0l-8.29-3.78-1.42.65a1 1 0 0 0 0 1.84l8.58 3.91a2 2 0 0 0 1.66 0l8.58-3.9a1 1 0 0 0 .26-1.85Z"/></svg>Section development</h3>
          <p>Sometimes the work happens in smaller groups. I coach section leaders and help individual voice parts strengthen their foundation.</p>
        </div>
        
        <div class="help-item reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>Director support</h3>
          <p>I work alongside directors to address specific challenges, prepare for performances, or bring a fresh perspective to repertoire.</p>
        </div>

        <div class="help-item reveal">
          <h3><svg class="icon-inline" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M21 12a9 9 0 1 1-9-9c2.52 0 4.93 1 6.74 2.74L21 8"/><path d="M21 3v5h-5"/></svg>Show preparation</h3>
          <p>From repertoire selection to staging, I help groups pull everything together for performances that feel polished, connected, and genuinely moving.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Ensemble Performance Showcase -->
  <section class="showcase-section">
    <div class="container container-narrow">
      <div class="showcase-image reveal">
        <img src="/images/ted-directing-chorus-stage.webp" alt="Ted Chamberlain directing a men's chorus on stage during a performance" class="showcase-photo" />
        <p class="showcase-caption">Directing a men's chorus on stage — bringing energy, precision, and musical vision to every performance</p>
      </div>
    </div>
  </section>

  <SectionDivider variant="wave" topColor="var(--color-navy-deep)" bottomColor="var(--color-off-white)" />

  <!-- How It Works Section -->
  <section class="how-section">
    <div class="container container-narrow reveal">
      <h2>How ensemble coaching works</h2>
      
      <div class="how-content">
        <div class="how-block">
          <h3>The first step</h3>
          <p>We start with a conversation about your group's goals. Tell me what you're working toward, and I'll share how I might help.</p>
        </div>
        
        <div class="how-block">
          <h3>Flexible formats</h3>
          <p>I design each engagement around what your ensemble needs. Options include:</p>
          <ul class="format-list">
            <li><strong>One-time workshops</strong> — A focused session on a specific skill or piece of repertoire</li>
            <li><strong>Ongoing coaching</strong> — Regular sessions over weeks or months to build skills systematically</li>
            <li><strong>Competition prep</strong> — Intensive work leading up to contest or performance</li>
            <li><strong>Sectional coaching</strong> — Targeted work with individual voice parts</li>
            <li><strong>Custom workshops</strong> — Sessions designed around your group's specific goals</li>
          </ul>
        </div>
        
        <div class="how-block">
          <h3>Location</h3>
          <p>I can work with your group at your rehearsal space, or smaller ensembles can come to my studio in Lacey, Washington. Virtual coaching is also available for certain types of work.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="expect-section">
    <div class="container container-narrow reveal">
      <h2>What to expect</h2>
      
      <p>I approach ensemble coaching the same way I approach individual instruction: expression first, technique in service of expression.</p>

      <blockquote class="pull-quote">Expression first, technique in service of expression.</blockquote>

      <p>We'll work on the physical and musical foundations that let voices come together freely — breath support, resonance, vowel placement, and listening skills. We'll also explore the performance side — how to connect with each other and with your audience, how to tell the story, and how to bring your authentic selves to the music.</p>
      
      <p>I explain the "why" behind what we're doing. When your singers understand <a href="/avf">how their voices work</a>, they can keep growing on their own. That's the goal.</p>
    </div>
  </section>

  <SectionDivider variant="angle" topColor="var(--color-white)" bottomColor="var(--color-navy-deep)" />

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container reveal">
      <h2>Ready to elevate your ensemble?</h2>
      <p>The first step is a conversation. Tell me about your group and your goals, and I'll share how I can help.</p>
      <a href="/contact" class="btn btn-primary">Get in Touch</a>
      <p class="cta-secondary">Questions? Reach out anytime: <a href="mailto:ted@tedsvoiceacademy.com">ted@tedsvoiceacademy.com</a></p>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero {
    background:
      url('/images/noise-texture.png') repeat,
      linear-gradient(135deg, var(--color-navy-deep) 0%, var(--color-navy-medium) 100%);
    background-size: 200px 200px, 100% 100%;
    background-blend-mode: soft-light, normal;
    padding: 5rem 0 4rem;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 900px) {
    .hero-grid {
      grid-template-columns: 1.1fr 1fr;
      gap: 4rem;
    }
  }

  .hero-eyebrow {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gold-bright);
    margin-bottom: 0.75rem;
  }

  .hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 4vw + 1rem, 3rem);
    font-weight: 700;
    color: var(--color-white);
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-cream);
    max-width: 650px;
    margin-bottom: 2rem;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .hero-photo {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    animation: heroPhotoIn 1.2s ease-out 0.5s both;
  }

  .hero-content {
    animation: heroTextIn 1s ease-out 0.2s both;
  }

  @keyframes heroTextIn {
    from { opacity: 0; transform: translateX(-30px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes heroPhotoIn {
    from { opacity: 0; transform: scale(1.06); }
    to { opacity: 1; transform: scale(1); }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-content, .hero-photo {
      animation: none;
    }
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 6px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }

  .btn-primary {
    background: var(--color-gold-bright);
    color: var(--color-navy-deep);
  }

  .btn-primary:hover {
    background: var(--color-gold-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(212, 168, 75, 0.3);
  }

  /* Container Narrow */
  .container-narrow {
    max-width: 800px;
    margin: 0 auto;
  }

  /* Intro Section */
  .intro-section {
    background: var(--color-off-white);
    padding: 4rem 0;
  }

  .intro-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .intro-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: 3rem;
    }
  }

  .intro-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: 1rem;
  }

  .intro-text:last-child {
    margin-bottom: 0;
  }

  .intro-image {
    display: flex;
    justify-content: center;
  }

  .intro-photo {
    width: 100%;
    max-width: 500px;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  /* Showcase Section */
  .showcase-section {
    background: var(--color-white);
    padding: 2rem 0 3rem;
  }

  .showcase-image {
    text-align: center;
  }

  .showcase-photo {
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .showcase-caption {
    font-size: 0.9375rem;
    color: var(--color-gray-medium);
    font-style: italic;
    margin-top: 1rem;
  }

  /* Who Section */
  .who-section {
    background: var(--color-white);
    padding: 4rem 0;
  }

  .who-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    text-align: center;
    margin: 0 0 1rem;
  }

  .section-intro {
    text-align: center;
    font-size: 1.125rem;
    color: var(--color-charcoal);
    max-width: 700px;
    margin: 0 auto 2.5rem;
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .card {
    background: var(--color-off-white);
    padding: 1.75rem;
    border-radius: 12px;
    border-left: 4px solid var(--color-gold-bright);
    display: flex;
    flex-direction: column;
  }

  .card h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 0.75rem;
  }

  .card p {
    color: var(--color-charcoal);
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }

  /* Help Section */
  .help-section {
    background:
      url('/images/noise-texture.png') repeat,
      linear-gradient(135deg, var(--color-navy-deep) 0%, var(--color-navy-medium) 100%);
    background-size: 200px 200px, 100% 100%;
    background-blend-mode: soft-light, normal;
    padding: 4rem 0;
  }

  .help-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-white);
    text-align: center;
