    font-size: 0.9375rem;
    margin: 0;
    letter-spacing: 0.02em;
  }

  /* Value Section */
  .value-section {
    background: var(--color-off-white);
    padding: 4rem 0;
    text-align: center;
  }

  .value-section h2 {
    font-family: var(--font-heading);
