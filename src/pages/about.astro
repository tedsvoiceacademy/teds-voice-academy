  }

  .belief-card {
    background: rgba(255, 255, 255, 0.08);
    padding: 1.75rem;
    border-radius: 12px;
    border-top: 3px solid var(--color-gold-bright);
  }

  .belief-card h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
