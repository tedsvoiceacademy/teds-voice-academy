    border-radius: 12px;
    border-left: 4px solid var(--color-gold-bright);
    background: var(--color-white);
  }

  .ensemble-card h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 0.75rem;
  }

  .ensemble-card p {
    color: var(--color-charcoal);
    line-height: 1.7;
    margin: 0 0 1rem;
  }

  .ensemble-links {
    display: flex;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  .ensemble-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
