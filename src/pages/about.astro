    color: var(--color-gold-bright);
    margin: 0 0 0.75rem;
  }

  .belief-card p {
    color: var(--color-cream);
    line-height: 1.7;
    margin: 0;
  }

  /* Credentials Section */
  .credentials-section {
    background: var(--color-off-white);
    padding: 4rem 0;
  }

  .credentials-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
