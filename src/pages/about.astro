    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: 1.5rem;
  }

  .personal-section p:last-child {
    margin-bottom: 0;
  }

  /* Ensembles Section */
  .ensembles-section {
    background: var(--color-off-white);
    padding: 4rem 0;
  }

  .ensembles-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 2.5vw + 1rem, 2rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 1.5rem;
  }

  .ensembles-section > .container-narrow > p {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: 1.5rem;
  }

  .ensemble-cards {
    display: flex;
    flex-direction: column;
