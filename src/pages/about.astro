    color: var(--color-pass-teal);
  }

  .pass-link {
    color: var(--color-pass-green);
  }

  .pass-link:hover {
    color: var(--color-pass-green-dark);
  }

  /* Health Card Styling */
  .health-card {
    border-left-color: var(--color-gold-bright);
  }

  .health-card .framework-link {
    color: var(--color-gold-bright);
  }

  .health-card .framework-link:hover {
    color: var(--color-gold-hover);
  }

  /* Personal Section */
  .personal-section {
    background: var(--color-white);
    padding: 4rem 0;
  }

  .personal-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 2.5vw + 1rem, 2rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 1.5rem;
  }

