    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 1.5rem;
  }

  .path-section p {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    margin-bottom: 1.5rem;
  }

  .path-section p:last-child {
    margin-bottom: 0;
  }

  /* Philosophy Section */
