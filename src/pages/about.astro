    font-weight: 600;
    color: var(--color-gold-bright);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ensemble-link:hover {
    color: var(--color-gold-hover);
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, var(--color-navy-deep) 0%, var(--color-navy-medium) 100%);
    padding: 4rem 0;
    text-align: center;
  }

  .cta-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-white);
    margin: 0 0 1rem;
  }

  .cta-section > .container > p {
    font-size: 1.125rem;
    color: var(--color-cream);
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .cta-secondary {
    margin-top: 1.5rem;
    font-size: 0.9375rem;
    color: var(--color-cream);
  }

  .cta-secondary a {
    color: var(--color-gold-bright);
    text-decoration: none;
  }

  .cta-secondary a:hover {
    text-decoration: underline;
  }

  /* Mobile Adjustments */
  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0;
    }

    .intro-section,
    .path-section,
    .philosophy-section,
    .credentials-section,
    .personal-section,
    .cta-section {
      padding: 3rem 0;
    }

    .beliefs-grid {
      grid-template-columns: 1fr;
    }

    .image-placeholder {
      max-width: 280px;
    }
  }
</style>
