    background: var(--color-off-white);
    padding: 4rem 2rem;
    text-align: center;
  }

  .problem-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    margin: 0 0 1.5rem;
  }

  .problem-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-charcoal);
    text-align: left;
    margin-bottom: 1.25rem;
  }

  /* Features Section */
  .features-section {
    background:
      url('/images/noise-texture.png') repeat,
      linear-gradient(135deg, var(--color-navy-deep) 0%, var(--color-navy-medium) 100%);
    background-size: 200px 200px, 100% 100%;
    background-blend-mode: soft-light, normal;
    padding: 4rem 2rem;
  }

  .features-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-white);
    text-align: center;
    margin: 0 0 0.75rem;
  }

  .section-intro {
    text-align: center;
    font-size: 1.1rem;
    color: var(--color-cream);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.08);
    padding: 1.75rem;
    border-radius: 12px;
    border-top: 3px solid var(--color-gold-bright);
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.12);
  }

  .feature-icon {
    color: var(--color-gold-bright);
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-family: var(--font-heading);
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--color-white);
    margin: 0 0 0.75rem;
  }

  .feature-card p {
    color: var(--color-cream);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.95;
  }

  /* How It Works Section */
  .how-section {
    background: var(--color-cream);
    padding: 4rem 2rem;
  }

  .how-section h2 {
    font-family: var(--font-heading);
    font-size: clamp(1.75rem, 3vw + 1rem, 2.5rem);
    font-weight: 700;
    color: var(--color-navy-deep);
    text-align: center;
